<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_heads.ejs') %>

  <body>
    <!-- Navigation -->

    <%- include('partials/_navbar.ejs') %>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/home-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <div class="container my-5">
      <div class="card">
          <div class="card-body">
              <h1 class="card-title mb-4"><%= post.title %></h1>
              <p class="card-text"><%= post.message %></p>
              <!-- You can customize this section based on your actual post content -->
              <a href="/" class="btn btn-primary mt-3">Back to Posts</a>
          </div>
      </div>
  </div>
 
    <hr />

    <!-- Footer -->
    <%- include('partials/_footer.ejs') %>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>

    <script>
      // Mesaj Kutusu
      // Sayfanın altında mesaj kutusunu göstermek için JavaScript
      document.addEventListener("DOMContentLoaded", function () {
        // Mesaj kutusunu seç
        const messageBox = document.getElementById("messageBox");

        // Kutu varsa ve 3 saniye sonra gizlenmesi gerekiyorsa
        if (messageBox) {
          setTimeout(function () {
            messageBox.style.display = "none"; // Kutuyu gizle
          }, 3000); // 3 saniye sonra gizle
        }
      });
    </script>
  </body>
</html>
