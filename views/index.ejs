<!DOCTYPE html>
<html lang="en">
  <%- include('partials/_heads.ejs') %>

  <body>
    <!-- Navigation -->

    <%- include('partials/_navbar.ejs') %>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('img/home-bg.jpg')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="site-heading">
              <h1>Clean Blog</h1>
              <span class="subheading">A Blog Theme by Start Bootstrap</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <!-- Postlar Buraya Gelir -->
          <% if (typeof message !== 'undefined' && message) { %>
          <div id="messageBox" class="alert alert-success" role="alert">
            <strong><%= message %></strong>
          </div>
          <% } %>

          <!-- Postlar Buraya Gelir -->
          <!-- Pager -->
        </div>
      </div>
    </div>

    <hr />

    <% if (posts) { %>

      <div class="row">
        <% for (let index = 0; index < posts.length; index++) { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body d-flex flex-column"> <!-- d-flex ve flex-column sınıflarını ekleyin -->
                        <h4 class="card-title text-primary">
                            <a href="/posts/<%= posts[index]._id %>"><%= posts[index].title %></a>
                        </h4>
                        <p class="card-text"><%= posts[index].message %></p>
                        <!-- Sil butonunu bir div içine alın -->
                        <div class="d-flex justify-content-end mt-auto"> <!-- mt-auto sınıfını ekleyin -->
                            <button class="btn btn-danger delete-button">Sil</button>
                        </div>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-between align-items-center">
                        <small class="text-muted">Posted on <%= posts[index].createdAt.toDateString() %></small>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    

    <% }else{ %>
    <p>There is no post</p>
    <% } %>

    <!-- Footer -->
    <%- include('partials/_footer.ejs') %>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="js/clean-blog.min.js"></script>
    <!-- jQuery CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
   document.addEventListener('DOMContentLoaded', function() {
    // Sil butonunu gösterme işlevi
    var cards = document.querySelectorAll('.card');

    cards.forEach(function(card) {
        card.addEventListener('mouseenter', function() {
            var deleteButton = this.querySelector('.delete-button');
            if (deleteButton) {
                deleteButton.style.opacity = '1';
            }
        });

        card.addEventListener('mouseleave', function() {
            var deleteButton = this.querySelector('.delete-button');
            if (deleteButton) {
                deleteButton.style.opacity = '0';
            }
        });
    });

    var deleteButtons = document.querySelectorAll('.delete-button');
    deleteButtons.forEach(function(button) {
        button.style.opacity = '0';
    });
});
</script>


    <script>
      // Mesaj Kutusu
      // Sayfanın altında mesaj kutusunu göstermek için JavaScript
      document.addEventListener("DOMContentLoaded", function () {
        // Mesaj kutusunu seç
        const messageBox = document.getElementById("messageBox");

        // Kutu varsa ve 3 saniye sonra gizlenmesi gerekiyorsa
        if (messageBox) {
          setTimeout(function () {
            messageBox.style.display = "none"; // Kutuyu gizle
          }, 3000); // 3 saniye sonra gizle
        }
      });
    </script>
  </body>
</html>
